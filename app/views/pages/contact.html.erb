<div class="w-full h-screen p-8 bg-gradient-to-b from-black to-purple-900 text-purple-200 flex flex-col justify-center items-center">
  <h1 class="text-3xl font-bold mb-6">Contact Me</h1>
  
  <%= form_with url: "/contact", method: :post, class: "space-y-6 w-full max-w-xl" do |form| %>
    <div class="space-y-2">
      <%= form.label :full_name, "Full Name", class: "block text-lg font-medium" %>
      <%= form.text_field :full_name, class: "w-full p-3 border border-purple-600 rounded-lg bg-purple-800 text-purple-100 placeholder:text-purple-300 focus:ring-2 focus:ring-purple-500 focus:outline-none" %>
    </div>
    
    <div class="space-y-2">
      <%= form.label :email, "Email", class: "block text-lg font-medium" %>
      <%= form.email_field :email, class: "w-full p-3 border border-purple-600 rounded-lg bg-purple-800 text-purple-100 placeholder:text-purple-300 focus:ring-2 focus:ring-purple-500 focus:outline-none" %>
    </div>
    
    <div class="space-y-2">
      <%= form.label :subject, "Subject", class: "block text-lg font-medium" %>
      <%= form.text_field :subject, class: "w-full p-3 border border-purple-600 rounded-lg bg-purple-800 text-purple-100 placeholder:text-purple-300 focus:ring-2 focus:ring-purple-500 focus:outline-none" %>
    </div>
    
    <div class="space-y-2">
      <%= form.label :message, "Message", class: "block text-lg font-medium" %>
      <%= form.text_area :message, class: "w-full p-3 border border-purple-600 rounded-lg bg-purple-800 text-purple-100 placeholder:text-purple-300 focus:ring-2 focus:ring-purple-500 focus:outline-none" %>
    </div>

    <%= form.submit "Send Message", class: "w-full py-3 bg-purple-200 text-purple-900 rounded-lg font-bold hover:bg-purple-300 transition duration-300" %>
  <% end %>
</div>
